<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.homeCycle.more.RestaurantChangePasswordFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/dim_32dp"
                android:paddingBottom="@dimen/dim_32dp"
                android:paddingStart="@dimen/dim_12dp"
                android:paddingEnd="@dimen/dim_12dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_edit_text"
                    android:layout_marginTop="@dimen/dim_16dp"
                    android:paddingBottom="@dimen/dim_5dp"
                    android:hint="@string/old_password"
                    android:textColorHint="@color/blue"
                    android:gravity="center_vertical"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/text1">
                    <EditText
                        android:id="@+id/restaurant_change_password_fragment_et_old_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dim_12dp"
                        android:paddingEnd="@dimen/dim_12dp"
                        android:textColor="@color/text1"
                        android:inputType="textPassword"/>
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_edit_text"
                    android:layout_marginTop="@dimen/dim_24dp"
                    android:paddingBottom="@dimen/dim_5dp"
                    android:hint="@string/new_password"
                    android:textColorHint="@color/blue"
                    android:gravity="center_vertical"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/text1">

                    <EditText
                        android:id="@+id/restaurant_change_password_fragment_et_new_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim_16dp"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dim_12dp"
                        android:paddingEnd="@dimen/dim_12dp"
                        android:textColor="@color/text1"
                        android:background="@drawable/shape_edit_text"
                        android:inputType="textPassword"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_edit_text"
                    android:layout_marginTop="@dimen/dim_24dp"
                    android:paddingBottom="@dimen/dim_5dp"
                    android:hint="@string/confirm_the_new_password"
                    android:textColorHint="@color/blue"
                    android:gravity="center_vertical"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/text1">

                    <EditText
                        android:id="@+id/restaurant_change_password_fragment_et_confirm_new_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim_16dp"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dim_12dp"
                        android:paddingEnd="@dimen/dim_12dp"
                        android:textColor="@color/text1"
                        android:background="@drawable/shape_edit_text"
                        android:inputType="textPassword"/>

                </com.google.android.material.textfield.TextInputLayout>


                <Button
                    android:id="@+id/restaurant_change_password_fragment_btn_change"
                    android:layout_width="@dimen/dim_200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_button"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dim_50dp"
                    android:layout_marginBottom="@dimen/dim_32dp"
                    android:textColor="@color/white"
                    android:text="@string/change" />

            </LinearLayout>

        </ScrollView>


    </RelativeLayout>



</RelativeLayout>