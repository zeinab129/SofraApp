<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_layer1"
    tools:context=".view.fragment.authCycle.ForgetPasswordFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_layer2">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/dim_32dp"
                android:paddingBottom="@dimen/dim_32dp"
                android:paddingStart="@dimen/dim_12dp"
                android:paddingEnd="@dimen/dim_12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/please_enter_your_email_address"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dim_32dp"
                    android:textSize="@dimen/dim_20sp"
                    android:textColor="@color/white"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_edit_text"
                    android:layout_marginTop="@dimen/dim_16dp"
                    android:paddingBottom="@dimen/dim_5dp"
                    android:hint="@string/email"
                    android:textColorHint="@color/hint"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/forget_password_fragment_et_email"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dim_40dp"
                        android:layout_marginTop="@dimen/dim_40dp"
                        android:textColorHint="@color/hint"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dim_12dp"
                        android:paddingEnd="@dimen/dim_12dp"
                        android:textColor="@color/text1"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/shape_edit_text"/>

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/forget_password_fragment_btn_send"
                    android:layout_width="@dimen/dim_200dp"
                    android:layout_height="@dimen/dim_45dp"
                    android:background="@drawable/shape_button"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dim_50dp"
                    android:layout_marginBottom="@dimen/dim_32dp"
                    android:textColor="@color/white"
                    android:text="@string/send" />

            </LinearLayout>

        </ScrollView>


    </RelativeLayout>

</RelativeLayout>