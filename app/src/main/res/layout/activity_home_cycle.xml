<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.HomeCycleActivity">

    <include layout="@layout/tool_bar" />

    <FrameLayout
        android:id="@+id/home_cycle_activity_fl_home_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/home_cycle_activity_rg_navigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_60dp"
        android:background="@drawable/shape_nav_bar"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_cycle_activity_iv_home"
                style="@style/bottom_navigation_select"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4dp"
                android:visibility="visible" />

            <RadioButton
                android:id="@+id/home_cycle_activity_rb_home"
                style="@style/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/ic_nav_home" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_cycle_activity_iv_list"
                style="@style/bottom_navigation_select"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4dp" />

            <RadioButton
                android:id="@+id/home_cycle_activity_rb_list"
                style="@style/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/ic_nav_list" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_cycle_activity_iv_profile"
                style="@style/bottom_navigation_select"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <RadioButton
                    android:id="@+id/home_cycle_activity_rb_profile"
                    style="@style/bottom_navigation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/ic_nav_user" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_cycle_activity_iv_more"
                style="@style/bottom_navigation_select"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4dp" />

            <RadioButton
                android:id="@+id/home_cycle_activity_rb_more"
                style="@style/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/ic_nav_more" />

        </LinearLayout>

    </RadioGroup>


</LinearLayout>