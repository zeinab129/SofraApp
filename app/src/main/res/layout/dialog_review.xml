<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dim_16dp"
    android:paddingBottom="@dimen/dim_16dp"
    android:paddingStart="@dimen/dim_8dp"
    android:paddingEnd="@dimen/dim_8dp"
    android:layout_gravity="center"
    android:background="@drawable/shape_item_restaurant"
    android:backgroundTint="@color/gray"
    android:id="@+id/dialog_review">

    <TextView
        android:id="@+id/dialog_review_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:textSize="@dimen/dim_20sp"
        android:text="@string/choose_rate"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/dialog_review_ll_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_review_tv_title"
        android:layout_marginTop="@dimen/dim_24dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <ImageButton
            android:id="@+id/dialog_review_ib_imo1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_imo1"/>
        <ImageButton
            android:id="@+id/dialog_review_ib_imo2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_imo2"/>
        <ImageButton
            android:id="@+id/dialog_review_ib_imo3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_imo3"/>
        <ImageButton
            android:id="@+id/dialog_review_ib_imo4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_imo4"/>
        <ImageButton
            android:id="@+id/dialog_review_ib_imo5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_imo5"/>
    </LinearLayout>

    <EditText
        android:id="@+id/dialog_review_et_comment"
        android:layout_below="@id/dialog_review_ll_rate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_150dp"
        android:layout_marginTop="@dimen/dim_24dp"
        android:layout_marginEnd="@dimen/dim_24dp"
        android:layout_marginStart="@dimen/dim_24dp"
        android:padding="@dimen/dim_16dp"
        android:gravity="top"
        android:textSize="@dimen/dim_14sp"
        android:textColor="@color/blue"
        android:hint="@string/add_your_comment_here"
        android:background="@drawable/shape_edit_text"/>

    <Button
        android:id="@+id/dialog_review_btn_add"
        android:layout_width="@dimen/dim_150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button"
        android:layout_below="@id/dialog_review_et_comment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dim_24dp"
        android:layout_marginBottom="@dimen/dim_16dp"
        android:text="@string/add"
        android:textColor="@color/white"/>





</RelativeLayout>