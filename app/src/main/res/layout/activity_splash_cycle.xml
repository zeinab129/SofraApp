<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".view.activity.SplashCycleActivity"
    android:layoutDirection="ltr">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/splash_top"
        android:layout_marginTop="-45dp"
        android:layout_marginLeft="-65dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/splash_bottom"
        android:layout_marginBottom="-110dp"
        android:layout_marginRight="-100dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dim_250dp"
            android:layout_height="@dimen/dim_250dp"
            android:src="@drawable/ic_logo"/>

        <Button
            android:id="@+id/splash_cycle_activity_btn_order_food"
            android:layout_width="@dimen/dim_300dp"
            android:layout_height="@dimen/dim_50dp"
            android:background="@drawable/shape_button"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="@string/order_food"/>

        <Button
            android:id="@+id/splash_cycle_activity_btn_sell_food"
            android:layout_width="@dimen/dim_300dp"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/dim_24dp"
            android:background="@drawable/shape_button"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="@string/sell_food"/>

    </LinearLayout>

</RelativeLayout>