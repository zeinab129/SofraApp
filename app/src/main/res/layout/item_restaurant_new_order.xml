<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_200dp"
    android:background="@drawable/shape_et_edit"
    android:layout_marginTop="@dimen/dim_12dp"
    android:layout_marginStart="@dimen/dim_24dp"
    android:layout_marginEnd="@dimen/dim_24dp"
    android:padding="@dimen/dim_12dp">

   <androidx.cardview.widget.CardView
       android:id="@+id/item_restaurant_new_order_cv_image"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:cardCornerRadius="@dimen/dim_12dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent">

       <ImageView
           android:id="@+id/item_restaurant_new_order_iv_image"
           android:layout_width="@dimen/dim_100dp"
           android:layout_height="@dimen/dim_80dp"
           android:scaleType="fitXY"

           tools:src="@drawable/kfc"/>

   </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_restaurant_new_order_tv_client_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_8dp"
        android:textSize="@dimen/dim_16sp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_restaurant_new_order_cv_image"
        tools:text="Client: Mohamed Ahmed"/>

    <TextView
        android:id="@+id/item_restaurant_new_order_tv_order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_8dp"
        android:layout_marginTop="@dimen/dim_2dp"
        android:textColor="@color/pink_dark"
        app:layout_constraintTop_toBottomOf="@id/item_restaurant_new_order_tv_client_name"
        app:layout_constraintStart_toEndOf="@id/item_restaurant_new_order_cv_image"
        tools:text="order num: 16"/>

    <TextView
        android:id="@+id/item_restaurant_new_order_tv_order_total_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_8dp"
        android:layout_marginTop="@dimen/dim_2dp"
        android:textColor="@color/pink_dark"
        app:layout_constraintTop_toBottomOf="@id/item_restaurant_new_order_tv_order_number"
        app:layout_constraintStart_toEndOf="@id/item_restaurant_new_order_cv_image"
        tools:text="total: 100Rial"/>

    <TextView
        android:id="@+id/item_restaurant_new_order_tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_8dp"
        android:layout_marginTop="@dimen/dim_2dp"
        android:textColor="@color/pink_dark"
        app:layout_constraintTop_toBottomOf="@id/item_restaurant_new_order_tv_order_total_cost"
        app:layout_constraintStart_toEndOf="@id/item_restaurant_new_order_cv_image"
        tools:text="address: 127 Moez ebn Ali str. rawda region AlRyad."/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/item_restaurant_new_order_btn_call"
            android:layout_width="0dp"
            android:layout_height="@dimen/dim_35dp"
            android:layout_weight="1"
            android:background="@drawable/shape_et_edit"
            android:backgroundTint="@color/pink_light"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/call"
            android:drawableStart="@drawable/ic_call"
            android:paddingStart="@dimen/dim_25dp"
            android:paddingEnd="25dp"
            android:layout_marginStart="@dimen/dim_4dp"
            android:layout_marginEnd="@dimen/album_dp_4"/>

        <Button
            android:id="@+id/item_restaurant_new_order_btn_accept"
            android:layout_width="0dp"
            android:layout_height="@dimen/dim_35dp"
            android:layout_weight="1"
            android:background="@drawable/shape_et_edit"
            android:backgroundTint="@color/green"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/accept"
            android:drawableStart="@drawable/ic_like"
            android:paddingStart="@dimen/dim_15dp"
            android:paddingEnd="@dimen/dim_15dp"
            android:layout_marginStart="@dimen/dim_4dp"
            android:layout_marginEnd="@dimen/album_dp_4"/>

        <Button
            android:id="@+id/item_restaurant_new_order_btn_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/dim_35dp"
            android:layout_weight="1"
            android:background="@drawable/shape_et_edit"
            android:backgroundTint="@color/blue"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/cancel"
            android:drawableStart="@drawable/ic_close"
            android:paddingStart="@dimen/dim_15dp"
            android:paddingEnd="@dimen/dim_15dp"
            android:layout_marginStart="@dimen/dim_4dp"
            android:layout_marginEnd="@dimen/album_dp_4"/>

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>