<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dim_24dp"
    android:paddingBottom="@dimen/dim_24dp"
    android:paddingStart="@dimen/dim_12dp"
    android:paddingEnd="@dimen/dim_12dp"
    android:layout_gravity="center"
    android:background="@drawable/shape_item_restaurant"
    android:id="@+id/dialog_review">


    <TextView
        android:id="@+id/dialog_sign_out_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/are_you_sure_you_want_to_sign_out"
        android:textColor="@color/blue"
        android:textSize="@dimen/dim_20sp"
        android:layout_marginTop="@dimen/dim_24dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dim_24dp"
        android:paddingEnd="@dimen/dim_24dp"
        android:layout_marginTop="@dimen/dim_24dp"
        android:layout_marginBottom="@dimen/dim_24dp"
        android:layout_below="@id/dialog_sign_out_title">


        <ImageButton
            android:id="@+id/dialog_sign_out_ib_cancel"
            android:layout_width="@dimen/dim_70dp"
            android:layout_height="@dimen/dim_70dp"
            android:background="@drawable/shape_item_restaurant"
            android:src="@drawable/ic_wrong"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageButton
            android:id="@+id/dialog_sign_out_ib_okay"
            android:layout_width="@dimen/dim_70dp"
            android:layout_height="@dimen/dim_70dp"
            android:background="@drawable/shape_item_restaurant"
            android:src="@drawable/ic_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>




</RelativeLayout>