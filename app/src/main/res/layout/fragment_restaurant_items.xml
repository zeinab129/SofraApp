<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.homeCycle.restaurant.RestaurantItemsFragment">

    <TextView
        android:id="@+id/restaurant_items_fragment_tv_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text1"
        android:textSize="@dimen/dim_24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dim_12dp"
        tools:text="Chicken fries"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/restaurant_items_fragment_rv_items_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/restaurant_items_fragment_tv_category_name"
        android:layout_marginTop="@dimen/dim_4dp"
        android:layout_marginEnd="@dimen/dim_4dp"
        android:layout_marginStart="@dimen/dim_4dp"
        tools:listitem="@layout/item_restaurant_food_item"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/restaurant_items_fragment_f_a_btn_add_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:tint="@color/pink_light"
        android:src="@drawable/ic_plus_white"
        android:backgroundTint="@color/white"
        app:borderWidth="0dp"/>

</RelativeLayout>